pipeline {
    agent any

    stages {
        stage('Prepare') {
            steps {
                script {
                    sh 'curl -fsSL https://deb.nodesource.com/setup_22.x | sudo -E bash -'
                    sh 'sudo apt-get install -y nodejs'
                }
                sh 'node -v'
            }
        }

        stage('Build') {
            steps {
                sh 'npm -v'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "JENKINS_URL: $JENKINS_URL"
            }
        }
    }
}
